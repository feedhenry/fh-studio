{>head/}

<div class="content login">
  <div id="logo"><img src="/images/logo.png" /></div>
  <br /><br />
  <div class="hero-unit">
        <p>{lang.login_message}</p>
        <form action="/login" method="post">
          <fieldset>
            <input placeholder="{lang.email}" name="username" id="login_email" type="text">
            <input placeholder="{lang.password}" name="password" id="login_password" type="password">
          </fieldset>
          <p>
            <button class="btn primary large" type="submit">{lang.login}</button>
            &nbsp;
            <a id="forgot" href="forgot.html" class="large">{lang.forgotPassword}</a>
          </p>
        </form>
    
  </div><!-- /hero-unit -->
</div>
{>foot/}